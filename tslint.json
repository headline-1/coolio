{
  "extends": [
    "tslint:recommended",
    "tslint-consistent-codestyle",
    "tslint-config-prettier",
    "tslint-no-circular-imports"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*"
    ]
  },
  "rules": {
    "no-circular-imports": {
      "severity": "warning"
    },
    "curly": true,
    "eofline": false,
    "forin": true,
    "array-type": [
      true,
      "array"
    ],
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "interface-over-type-literal": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": [
      true,
      120
    ],
    "max-classes-per-file": false,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "private-static-field",
          "public-instance-field",
          "private-instance-field",
          "public-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "naming-convention": [
      true,
      {
        "type": "default",
        "format": "camelCase",
        "leadingUnderscore": "forbid",
        "trailingUnderscore": "forbid"
      },
      {
        "type": "enumMember",
        "format": "UPPER_CASE"
      },
      {
        "type": "type",
        "format": "PascalCase"
      },
      {
        "type": "type",
        "filter": "TYPES|ACTIONS$",
        "format": "UPPER_CASE"
      },
      {
        "type": "variable",
        "modifiers": "const",
        "format": [
          "UPPER_CASE",
          "camelCase",
          "PascalCase"
        ]
      },
      {
        "type": "variable",
        "modifiers": "local",
        "format": "camelCase"
      },
      {
        "type": "variable",
        "modifiers": "rename",
        "format": [
          "camelCase",
          "PascalCase"
        ]
      },
      {
        "type": "variable",
        "modifiers": "unused",
        "leadingUnderscore": "required"
      },
      {
        "type": "functionVariable",
        "format": [
          "camelCase",
          "PascalCase"
        ]
      },
      {
        "type": "parameter",
        "format": [
          "camelCase",
          "PascalCase"
        ]
      },
      {
        "type": "property",
        "modifiers": [
          "const",
          "static"
        ],
        "format": "UPPER_CASE"
      }
    ],
    "no-arg": true,
    "no-bitwise": false,
    "no-console": false,
    "no-conditional-assignment": false,
    "no-consecutive-blank-lines": true,
    "no-construct": true,
    "no-debugger": false,
    "no-default-export": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-empty-interface": false,
    "no-eval": true,
    "no-shadowed-variable": false,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-var-requires": false,
    "no-unused-expression": true,
    "object-literal-sort-keys": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive"
      }
    ],
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always",
      "strict-bound-class-methods"
    ],
    "switch-default": true,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
